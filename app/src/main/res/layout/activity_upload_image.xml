<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Admin.UploadImageActivity">



    <androidx.cardview.widget.CardView
        android:id="@+id/select_image_cardview_uploadimageactivity"
        android:layout_width="130dp"
        android:layout_height="150dp"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:elevation="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:id="@+id/select_notice_imageview_uploadimageactivity"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:padding="15dp"
                android:background="@color/purple_200"
                android:src="@drawable/gallery"/>

            <!--            <view-->
            <!--                android:layout_width="match_parent"-->
            <!--                android:layout_height="1dp"-->
            <!--                android:layout_marginTop="10dp"/>-->
            <TextView
                android:id="@+id/select_image_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="Select Image"
                android:textColor="@color/textColor"
                android:textSize="20dp"/>



        </LinearLayout>

    </androidx.cardview.widget.CardView>



    <EditText
        android:id="@+id/image_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="25dp"
        android:hint="Image title.. ...."
        android:background="@drawable/edit_text"
        android:padding="16dp"
        android:textColor="@color/textColor"
        android:textStyle="bold"/>

    <Spinner
        android:id="@+id/image_category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:spinnerMode="dropdown"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:backgroundTint="@color/red"
        android:padding="20dp"
        android:gravity="center"
        android:layout_marginVertical="16dp"/>

    <Button
        android:id="@+id/upload_btn_uploadimageactivity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:layout_gravity="center"
        android:text="Upload"
        android:background="@drawable/buttons"
        android:padding="16dp"
        android:textColor="@color/textColor"
        android:textStyle="bold"/>


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp">

        <ImageView
            android:id="@+id/upload_image_view_image"
            android:layout_width="match_parent"
            android:background="@drawable/gallery"
            android:backgroundTint="@color/pink"
            android:scaleType="fitXY"
            android:fitsSystemWindows="true"
            android:layout_height="match_parent"/>


    </androidx.cardview.widget.CardView>




</LinearLayout>