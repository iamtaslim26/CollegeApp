<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Faculty.UpdateTeacherActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/update_profile_image_teacher"
            android:layout_width="120dp"
            android:layout_height="120dp"
            app:civ_border_width="2dp"
            android:layout_marginLeft="140dp"
            android:layout_marginTop="80dp"
            android:src="@drawable/person"
            android:background="@color/colorAccent"
            app:civ_border_color="#FF000000"/>


        <EditText
            android:id="@+id/update_name_teacher"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="25dp"
            android:hint="Name. . ."
            android:background="@drawable/edit_text"
            android:padding="16dp"
            android:textColor="@color/textColor"
            android:textStyle="bold"/>


        <EditText
            android:id="@+id/update_email_teacher"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="25dp"
            android:hint="Email. . ."
            android:background="@drawable/edit_text"
            android:padding="16dp"
            android:textColor="@color/textColor"
            android:textStyle="bold"/>


        <EditText
            android:id="@+id/update_post_teacher"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="25dp"
            android:hint="Post. . ."
            android:background="@drawable/edit_text"
            android:padding="16dp"
            android:textColor="@color/textColor"
            android:textStyle="bold"/>



        <Button
            android:id="@+id/update_upload_btn_teachers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:layout_gravity="center"
            android:text="Update Teacher"
            android:background="@drawable/buttons"
            android:padding="16dp"
            android:textColor="@color/textColor"
            android:textStyle="bold"/>

        <Button
            android:id="@+id/delete_btn_teachers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:layout_gravity="center"
            android:text="delete Teacher"
            android:background="@drawable/buttons"
            android:padding="16dp"
            android:textColor="@color/textColor"
            android:textStyle="bold"/>




    </LinearLayout>


</ScrollView>