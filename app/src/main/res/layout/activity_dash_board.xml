<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Admin.DashBoardActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_margin="5dp"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:id="@+id/add_notice"
            android:layout_width="130dp"
            android:layout_height="150dp"
            android:layout_margin="10dp"
            android:elevation="5dp">

            <LinearLayout
                android:id="@+id/upload_notice_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:id="@+id/notice_imageview"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:padding="15dp"
                    android:background="@color/red"
                    android:src="@drawable/notice"/>

<!--                <view-->
<!--                    android:layout_width="match_parent"-->
<!--                    android:layout_height="1dp"-->
<!--                    android:layout_marginTop="10dp"/>-->
                <TextView
                    android:id="@+id/upload_Notice_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:text="Upload Notice"
                    android:textColor="@color/textColor"
                    android:textSize="20dp"/>



            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/add_gallery"
            android:layout_width="130dp"
            android:layout_height="150dp"
            android:layout_margin="10dp"
            android:elevation="5dp">

            <LinearLayout
                android:id="@+id/upload_image_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:id="@+id/add_gallery_image"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:padding="15dp"
                    android:background="@color/purple_200"
                    android:src="@drawable/gallery"/>

<!--                <view-->
<!--                    android:layout_width="match_parent"-->
<!--                    android:layout_height="1dp"-->
<!--                    android:layout_marginTop="10dp"/>-->
                <TextView
                    android:id="@+id/upload_gallery_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:text="Upload Image"
                    android:textColor="@color/textColor"
                    android:textSize="20dp"/>



            </LinearLayout>

        </androidx.cardview.widget.CardView>



    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_margin="5dp"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:id="@+id/add_ebooks"
            android:layout_width="130dp"
            android:layout_height="150dp"
            android:layout_margin="10dp"
            android:elevation="5dp">

            <LinearLayout
                android:id="@+id/upload_pdf_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:id="@+id/pdf_imageview"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:padding="15dp"
                    android:background="@color/yellow"
                    android:src="@drawable/ebook_pdf"/>

<!--                <view-->
<!--                    android:layout_width="match_parent"-->
<!--                    android:layout_height="1dp"-->
<!--                    android:layout_marginTop="10dp"/>-->
                <TextView
                    android:id="@+id/pdf_Notice_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:text="Upload pdf"
                    android:textColor="@color/textColor"
                    android:textSize="20dp"/>



            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/add_faculty"
            android:layout_width="130dp"
            android:layout_height="150dp"
            android:layout_margin="10dp"
            android:elevation="5dp">

            <LinearLayout
                android:id="@+id/upload_faculty_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:id="@+id/add_faculty_image"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:padding="15dp"
                    android:background="@color/green1"
                    android:src="@drawable/faculty"/>

<!--                <view-->
<!--                    android:layout_width="match_parent"-->
<!--                    android:layout_height="1dp"-->
<!--                    android:layout_marginTop="10dp"/>-->
                <TextView
                    android:id="@+id/upload_faculty_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:text="Upload Faculty"
                    android:textColor="@color/textColor"
                    android:textSize="19dp"/>



            </LinearLayout>

        </androidx.cardview.widget.CardView>



    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_margin="5dp"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:id="@+id/delete_notice"
            android:layout_width="130dp"
            android:layout_height="150dp"
            android:layout_margin="10dp"
            android:elevation="5dp">

            <LinearLayout
                android:id="@+id/delete_notice_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:id="@+id/delete_imageview"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:padding="15dp"
                    android:background="@color/pink"
                    android:src="@drawable/delete"/>

<!--                <view-->
<!--                    android:layout_width="match_parent"-->
<!--                    android:layout_height="1dp"-->
<!--                    android:layout_marginTop="10dp"/>-->
                <TextView
                    android:id="@+id/delete_Notice_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:text="Delete Notice"
                    android:textColor="@color/textColor"
                    android:textSize="20dp"/>



            </LinearLayout>

        </androidx.cardview.widget.CardView>






    </LinearLayout>


</LinearLayout>